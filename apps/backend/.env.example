# This file is for backend environment variables
# Copy this file to .env and fill in your actual values

# Server configuration
PORT=8000
HOST=localhost
CORS_ORIGIN=http://localhost:5174
ACCESS_TOKEN_SECRET=your_access_token_secret_here_min_32_chars
ACCESS_TOKEN_EXPIRY=1d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_min_32_chars
REFRESH_TOKEN_EXPIRY=7d
JWT_SECRET=your_jwt_secret_here_min_32_chars

# Database configuration
DB_NAME=poll-automation
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
# For local MongoDB: mongodb://localhost:27017/poll-automation

# Cloudinary configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Google OAuth configuration - Passport.js format
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Zoho OAuth configuration
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret

# Environment-specific redirect URIs
# Google OAuth
GOOGLE_REDIRECT_URI_LOCAL=http://localhost:8000/api/auth/google/callback
GOOGLE_REDIRECT_URI_PROD=https://your-backend.onrender.com/api/auth/google/callback

# Zoho OAuth  
ZOHO_REDIRECT_URI_LOCAL=http://localhost:8000/oauth/callback
ZOHO_REDIRECT_URI_PROD=https://your-backend.onrender.com/oauth/callback

# Frontend URLs
FRONTEND_URL_LOCAL=http://localhost:5174
FRONTEND_URL_PROD=https://your-frontend.vercel.app

# Environment detection for dynamic URLs
NODE_ENV=development
# NODE_ENV=production

# Gemini AI API Key (Required for AI Question Generation)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
